n=int(input())
k1=(n+1)//2
for i in range(1,k1+1):
    for j in range(1,i):
        print(" ",end='')
    for j in range(1,i+1):
        print("* ",end='')
    print()
k2 = k1 -1
for i in range(1,k2+1):
    for j in range(1,k2-i+1):
        print(" ",end='')
    for j in range(1,k2-i+2):
        print("* ",end="")
    print()
